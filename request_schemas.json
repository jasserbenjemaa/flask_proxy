{
    "/receive": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "receive_json Request Schema",
        "description": "Schema for POST request to /receive",
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "message": {
                "type": "string"
            },
            "age": {
                "type": "string"
            },
            "source": {
                "type": "string"
            }
        },
        "required": [
            "name",
            "message",
            "age",
            "source"
        ]
    },
    "/submit": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "submit_form Request Schema",
        "description": "Schema for POST request to /submit",
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "message": {
                "type": "string"
            },
            "email": {
                "type": "string"
            }
        },
        "required": [
            "name"
        ]
    }
}
